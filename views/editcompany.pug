extends ribbon

block content
    .form_box
        h2.form_header Edit company
        form.form(action='/updatecompany/' + company._id method="POST")
            .box
                label.form_label Name
                input.form_input(placeholder="Company name" type="text" name="name" value=company ? company.name : '')
            .box
                label.form_label Address
                input.form_input(placeholder="ul. Hoza 3 Warszawa" type="text" name="address" value=company ? company.address : '')
            .box
                label.form_label Speciality
                input.form_input(placeholder="IT" type="text" name="speciality" value=company ? company.speciality : '')
            .box
                button.form_submit Save changes
            br
            a.form_signup(href="/companies") Go back to list.

    